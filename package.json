{
  "name": "wotan",
  "version": "0.0.0",
  "description": "Pluggable TypeScript and JavaScript linter",
  "main": "bin/main.js",
  "scripts": {
    "clean": "rimraf '{src,test/conformance}/**/*.{js?(.map),d.ts}'",
    "compile": "tsc -p .",
    "lint": "run-p lint:tslint lint:wotan",
    "lint:tslint": "tslint -p .",
    "lint:wotan": "node src/cli lint",
    "test": "run-p test:api test:rules test:integration",
    "test:api": "ava test/conformance",
    "test:integration": "node src/cli test 'test/integration/**/*.test.json' --exact",
    "test:rules": "node src/cli test 'test/rules/**/*.test.json' --exact",
    "coverage": "nyc run-s test",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "verify": "npm-run-all -s clean -p compile lint:tslint -p check-dependencies lint:wotan coverage",
    "check-dependencies": "depcruise src/**/*.js bin test/conformance/*.js -v .dependency-cruiser.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ajafff/wotan.git"
  },
  "keywords": [
    "lint",
    "ts",
    "js",
    "linter",
    "code",
    "style",
    "quality",
    "typescript",
    "javascript"
  ],
  "author": "Klaus Meinhardt",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ajafff/wotan/issues"
  },
  "homepage": "https://github.com/ajafff/wotan#readme",
  "devDependencies": {
    "@types/debug": "^0.0.30",
    "@types/diff": "^3.2.2",
    "@types/glob": "^5.0.33",
    "@types/js-yaml": "^3.10.1",
    "@types/json5": "0.0.29",
    "@types/minimatch": "^3.0.1",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^8.5.5",
    "@types/resolve": "0.0.4",
    "@types/to-absolute-glob": "^2.0.0",
    "ava": "^0.24.0",
    "coveralls": "^3.0.0",
    "dependency-cruiser": "^2.10.1",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.3.0",
    "rimraf": "^2.6.2",
    "tslint": "^5.8.0",
    "tslint-consistent-codestyle": "^1.10.1",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "bind-decorator": "^1.0.11",
    "chalk": "^2.3.0",
    "debug": "^3.1.0",
    "diff": "^3.4.0",
    "glob": "^7.1.2",
    "import-local": "^1.0.0",
    "inversify": "^4.9.0",
    "is-negated-glob": "^1.0.0",
    "js-yaml": "^3.10.0",
    "json5": "^0.5.1",
    "minimatch": "^3.0.4",
    "reflect-metadata": "^0.1.10",
    "resolve": "^1.5.0",
    "to-absolute-glob": "^2.0.1",
    "tslib": "^1.8.1",
    "tsutils": "^2.15.0"
  },
  "peerDependencies": {
    "typescript": "^2.4.1 || >= 2.7.0-dev"
  }
}
